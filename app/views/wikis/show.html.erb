<div>
  <%= #render partial: 'wiki', locals: {wiki: @wiki} %>
  <h1>
    <%= markdown(@wiki.title) %> <br>
    <small>
      submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.name %>
    </small>
  </h1>
</div>

<div class="row">
  <div class="col-md-8">
    <p><%= markdown(@wiki.body) %></p>
  </div>
  <% if user_is_authorized_for_wiki?(@wiki) %>
     <div class="col-md-4">
       <%= link_to "Edit Wiki", edit_wiki_path(@wiki), class: 'btn btn-success' %>
       <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
     </div>
  <% end %>
</div>
